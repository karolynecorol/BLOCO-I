package listaexercicio05;

import java.util.Scanner;

public class atividade01 {

	public static void main(String[] args) {

		Scanner leia = new Scanner(System.in);
				
		int idade = 0;
		int diasAno = 365;
		int anos = 365 / 12;
		int meses = 12;
		int contador = 0;
		
		
		System.out.println("Digite sua idade: ");
		idade = leia.nextInt(idade);
		
		contador = idade * diasAno / diasAno;
	
		
		System.out.println("Sua idade em dias é : " + contador);
		contador = leia.nextInt(contador);

		leia.close();
		
		
		
	}

}
