package listaexercicio05;

import java.util.Scanner;

public class atividade01 {

	public static void main(String[] args) {

		Scanner leia = new Scanner(System.in);
		
		int dia = 365;
		int mes = 12;
		int ano = 0;
		int dataHoje =2021;
		
		System.out.println("Digite dia de nascimento: ");
		dia = leia.nextInt();
		
		System.out.println("Digite mês de nascimento: ");
		mes = leia.nextInt();
		System.out.println("Digite ano de nascimento: ");
		ano = leia.nextInt();
		
		
		System.out.println("Sua idade em dias é: " + dataHoje * 365);
		
		
	
		
		
		
		
	}

}
